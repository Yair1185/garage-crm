<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1><%= title %></h1>

    <form method="POST" action="/vehicles/add">
        <label for="customer_id">Select Customer:</label>
        <select name="customer_id" required>
            <% if (customers.length === 0) { %>
                <option disabled>No customers available</option>
            <% } else { %>
                <% customers.forEach(function(customer) { %>
                    <option value="<%= customer.id %>"><%= customer.name %></option>
                <% }); %>
            <% } %>
        </select><br><br>
    
        <input type="text" name="model" placeholder="Vehicle Model" required><br><br>
        <input type="text" name="license_plate" placeholder="License Plate" required><br><br>
        <button type="submit">Add Vehicle</button>
    </form>
    
    <h2>Existing Vehicles</h2>
    <ul>
        <% vehicles.forEach(function(vehicle) { %>
            <li>
                <strong>Customer:</strong> <%= vehicle.customer_name %> |
                <strong>Model:</strong> <%= vehicle.model %> |
                <strong>License Plate:</strong> <%= vehicle.license_plate %>
            </li>
        <% }); %>
    </ul>
</body>
</html>
